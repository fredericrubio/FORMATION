<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.magellium.rental.ui.cmd.CustomerSelection">
         <iterate>
            <instanceof
                  value="com.opcoach.training.rental.Customer">
            </instanceof>
         </iterate>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.ui.edit.copy"
            class="com.magellium.rental.ui.cmd.handler.ConditionalHandler">
         <activeWhen>
            <reference
                  definitionId="com.magellium.rental.ui.cmd.CustomerSelection">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.magellium.rental.ui.view1?after=additions">
         <command
               commandId="org.eclipse.ui.edit.copy"
               label="Copy"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.magellium.rental.ui.cmd.CustomerSelection">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="com.magellium.rental.ui.cmd.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>

</plugin>
